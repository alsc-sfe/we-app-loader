{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports":true,
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["dom", "es2015"],
    "noImplicitAny": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}
